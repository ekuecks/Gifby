{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "background": {
    "page": "popup.html"
  },
  "page_action": {
      "default_icon": "icon.png",
      "default_title": "Gifby"
  },
  "content_scripts": [
  {
      "matches": ["<all_urls>"],
          "js": ["script.js"]
  }],
  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
