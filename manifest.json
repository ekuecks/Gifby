{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "background": {
    "page": "popup.html"
  },
  "page_action": {
      "default_icon": "icon.png",
      "default_title": "Gifby"
  },
  "content_scripts": [
  {
      "matches": ["<all_urls>"],
          "js": ["background.js", "mainView.js","script.js","lib/jquery-2.1.1.min.js",
                 "bootstrapCss.js", "main.js"]
  }],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
